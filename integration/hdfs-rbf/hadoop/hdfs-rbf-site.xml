<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>
    <property>
        <name>dfs.federation.router.store.driver.class</name>
        <value>org.apache.hadoop.hdfs.server.federation.store.driver.impl.StateStoreFileImpl</value>
    </property>
    <property>
        <name>dfs.federation.router.store.driver.file.directory</name>
        <value>/tmp/dfs-state-store-dir</value>
    </property>
    
    <!-- enable quota, reduce the router cache ttl -->
    <property>
        <name>dfs.federation.router.quota.enable</name>
        <value>true</value>
    </property>
    <property>
        <name>dfs.federation.router.cache.ttl</name>
        <value>10s</value>
    </property>
</configuration>